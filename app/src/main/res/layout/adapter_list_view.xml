<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/tripadapterdraw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvfrom"
            android:layout_width="121dp"
            android:layout_height="27dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/radselected"
            android:fontFamily="@font/monsbold"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="7sp"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeMinTextSize="9sp"

            app:autoSizeTextType="uniform"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            />

        <TextView
            android:id="@+id/tvto"
            android:layout_width="121dp"
            android:layout_height="27dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/radselected"
            android:fontFamily="@font/monsbold"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="7sp"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeMinTextSize="9sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toStartOf="@+id/tvadaptertime"


            app:layout_constraintHorizontal_bias="0.61"
            app:layout_constraintStart_toEndOf="@+id/tvfrom"
            app:layout_constraintTop_toTopOf="parent"


            />

        <TextView
            android:id="@+id/tvprops"
            android:layout_width="370dp"
            android:layout_height="17dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/tvfrom"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvfrom"
            app:layout_constraintTop_toBottomOf="@+id/tvfrom" />

        <TextView
            android:id="@+id/tvadaptertime"
            android:layout_width="76dp"
            android:layout_height="21dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toTopOf="@+id/tvprops"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tvfrom"
            app:layout_constraintEnd_toStartOf="@+id/tvto"
            app:layout_constraintStart_toEndOf="@+id/tvfrom"
            app:layout_constraintTop_toTopOf="@+id/tvfrom"
            app:srcCompat="@drawable/ic_baseline_arrow_right_alt_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>