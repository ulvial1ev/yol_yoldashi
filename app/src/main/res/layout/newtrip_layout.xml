<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edlocation"
            android:layout_width="314dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/edloc"
            android:drawableStart="@drawable/ic_loc"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/monsreg"
            android:hint="Hardan?"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textColorHint="#adb5bd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edlocation2"
            android:layout_width="314dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edloc"
            android:drawableStart="@drawable/ic_loc"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/monsreg"
            android:hint="Hara?"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textColorHint="#adb5bd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/edlocation"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edlocation"
            app:layout_constraintTop_toBottomOf="@+id/edlocation"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/grad"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/monsbold"
            android:text="Avtomobilin növü: "
            android:textColor="@color/white" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <RadioButton
            android:id="@+id/r_sedan"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/radselector"
            android:button="@color/transparent"
            android:elevation="4dp"
            android:onClick="onRadioButtonClicked"
            android:text="Sedan"
            android:textAlignment="center"
            android:textColor="@drawable/colorselector" />

        <RadioButton
            android:id="@+id/r_jeep"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/radselector"
            android:button="@color/transparent"
            android:onClick="onRadioButtonClicked"
            android:elevation="4dp"
            android:text="Jeep"
            android:textAlignment="center"
            android:textColor="@drawable/colorselector" />

        <RadioButton
            android:id="@+id/r_pickup"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:onClick="onRadioButtonClicked"
            android:layout_margin="10dp"
            android:background="@drawable/radselector"
            android:button="@color/transparent"
            android:elevation="4dp"
            android:text="Pickup"
            android:textAlignment="center"
            android:textColor="@drawable/colorselector" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/monsbold"
        android:text="Insan sayı:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <RadioButton
            android:id="@+id/r_1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/radselector"
            android:button="@color/transparent"
            android:elevation="4dp"
            android:onClick="onRadioButtonClicked1"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@drawable/colorselector" />

        <RadioButton
            android:id="@+id/r_2or3"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/radselector"
            android:button="@color/transparent"
            android:elevation="4dp"
            android:onClick="onRadioButtonClicked1"
            android:text="2-3"
            android:textAlignment="center"
            android:textColor="@drawable/colorselector" />

        <RadioButton
            android:id="@+id/r_4ormore"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/radselector"
            android:button="@color/transparent"
            android:elevation="4dp"
            android:onClick="onRadioButtonClicked1"
            android:text="4+"
            android:textAlignment="center"
            android:textColor="@drawable/colorselector" />
    </RadioGroup>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/signbtn"
        android:onClick="onclickcreate"
        android:padding="15dp"
        android:text="Yeni səyahət yarat"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/monsbold"
        android:text="Saat"
        app:layout_constraintBottom_toTopOf="@+id/tvsettime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvsettime"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginBottom="152dp"
        android:background="@drawable/radselector"
        android:drawableStart="@drawable/ic_clock_wh"
        android:drawablePadding="5dp"
        android:fontFamily="@font/monsreg"
        android:gravity="center"
        android:onClick="onclickselecttime"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Saatı seçin"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>